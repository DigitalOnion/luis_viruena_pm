<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="details_release_date">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingTop">@dimen/extra_margin</item>
        <item name="android:paddingBottom">@dimen/extra_wide_margin</item>
    </style>

    <style name="details_overview">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/paragraph_text_size</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>


</resources>
